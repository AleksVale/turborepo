# Application
NODE_ENV=development
PORT=3000

# Database
# Example for PostgreSQL running locally:
DATABASE_URL="postgresql://user:password@localhost:5432/mydb?schema=public"

# JWT Authentication
# IMPORTANT: Generate secure random strings for production (minimum 32 characters)
# You can generate them using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-long-change-me"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-chars-long-change-me"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Default Admin User
# Password for the default admin user (admin@admin.com)
ADMIN_DEFAULT_PASSWORD="admin123"
